<div class="d-flex justify-content-center">
  <div class="card mb-4" style="width: auto;">
    <div class="card-body">
      <h2 class="card-title"><%= @fruit_data['name'] %></h2>
      <p class="card-text mt-3"><%= @fruit_data['description'] %></p>
      <div class="mt-3">
        <%= @fruitFormCell.edit_fruit(@fruit_data, t) %>
      </div>

      <!-- Comment Section -->
      <hr>
      <h4><%=t.general.comments%></h4>
      <div class="comments">
        <% @comments.each do |comment| %>
          <div class="card mb-2">
            <div class="card-body">
              <p class="card-text"><%= comment['content'] %></p>
              <footer class="blockquote-footer">
                <%= comment['username'] %> on <%= comment['created_at'] %>
              </footer>
            </div>
          </div>
        <% end %>
      </div>

      <!-- New Comment Form -->
      <h5><%=t.general.addComment%></h5>
      <form action="/fruits/<%= @fruit_data['id'] %>/comments" method="POST">
        <textarea class="form-control mb-2" name="content" placeholder="<%=t.general.writeComment%>"></textarea>
        <button type="submit" class="btn btn-primary"><%=t.general.submit%></button>
      </form>
    </div>
  </div>
</div>
